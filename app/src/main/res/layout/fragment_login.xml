<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <!--<variable
            name=""
            type="com.example.Model클래스이름" />-->
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".presentation.login.LoginFrag">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_applogo_Login"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/app_logo" />

            <TextView
                android:id="@+id/app_Subject_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="함께 운동해요"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:src="@drawable/email_icon" />

                <EditText
                    android:id="@+id/ed_email_Login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:hint="이메일을 입력 해주세요"
                    android:privateImeOptions="defaultInputmode=english"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/password_icon" />

                <EditText
                    android:id="@+id/ed_pw_Login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="PW를 입력해주세요"
                    android:password="true"
                    android:textSize="18sp" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_Login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLoginHeight"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/blue_app_btn"
                android:text="로그인"
                android:textColor="@color/white"
                android:textSize="@dimen/btnLoginTextSize"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLoginHeight"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/blue_app_btn"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="@dimen/btnLoginTextSize"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</layout>

